{
  "name": "prison-services-feedback-and-support",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "devstart": "nodemon ./bin/www",
    "serverstart": "DEBUG=prison-services-feedback-and-support:* npm run devstart",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "node node_modules/eslint/bin/eslint.js ./",
    "test": "jest",
    "prepare": "husky",
    "compile-sass": "sass --load-path=node_modules/govuk-frontend --load-path=node_modules/@ministryofjustice/frontend --load-path=. ./sass:./build/static/stylesheets --style compressed",
    "compile-sass-watch": "npm run compile-sass && sass --load-path=. ./sass:./build/static/stylesheets --watch --style compressed"
  },
  "engines": {
    "node": "^22",
    "npm": "^11"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^5.2.1",
    "cookie-parser": "~1.4.7",
    "debug": "~4.4.3",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "govuk-frontend": "^5.13.0",
    "http-errors": "^2.0.0",
    "mkdirp": "^3.0.1",
    "morgan": "~1.10.1",
    "nunjucks": "^3.2.4",
    "brace-expansion": "^4.0.1"
  },
  "devDependencies": {
    "audit-ci": "^7.1.0",
    "@babel/eslint-parser": "^7.28.5",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "sass": "^1.93.2"
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "node_modules/*"
    ],
    "delay": 2500,
    "ext": "js,njk"
  }
}
